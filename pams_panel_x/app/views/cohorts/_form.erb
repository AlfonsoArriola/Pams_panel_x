<%= form_for  @cohort do |f| %>
		  <div>
		 	 <%= f.label :name %>
		 	 <%= f.text_field :name %>
		  </div>

		  <div>
		 	 <%= f.label :start_date %>
		 	 <%= f.text_field :start_date %>
		  </div>

		  <div>
		 	 <%= f.label :end_date %>
		 	 <%= f.text_field :end_date %>
		  </div>

		  <div>
		 	 <%= f.label :instructor_id %>
		 	 <%= f.select(:instructor_id, @instructors.map {|i| ["#{i.last_name}, #{i.first_name}", i.id]}) %>
		  </div>

		  <div>
		 	 <%= f.label :course_id %>
		 	 <%= f.select(:course_id, @courses.map {|c| [c.name, c.id]}) %>
		  </div>

		  <div>
		  	 <%= f.submit %>
		  </div>

<% end %>