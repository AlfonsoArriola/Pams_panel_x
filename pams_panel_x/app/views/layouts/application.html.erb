<!DOCTYPE html>
<html>
  <head>
    <title>PamsPanelX</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
   <link href="https://fonts.googleapis.com/css?family=Abril+Fatface|Bungee+Shade|Open+Sans" rel="stylesheet"> 
  </head>
 


    <div class="wrapper">
     <nav>
      <div class="logo">  
        <i class="fa fa-rocket" aria-hidden="true"> </i>
       </div>
       <div class="menu-icon">
        <i class="fa fa-bars"></i>
       </div>
       
         <ul>
         
           <li> 
             <%= link_to t('navi.student'), students_url %>
           </li>
           <li>
             
             <%= link_to t('navi.instructor'), instructors_url %>
           </li>
           <li> 
               <%= link_to t('navi.cohort'), cohorts_url %>
           </li>
           <li>
             <%= link_to t('navi.courses'), courses_url %>
           </li>

             <li>
               
                  <% if user_signed_in? %>
                  <%= link_to t('landing.sign_out'), destroy_user_session_path, method: :delete %>
                     <% else %>
                  
                 <% end %>
             </li>

              <div class="dropdown">
                <button class="dropbtn"> <%= t('navi.lang') %>
                  <i class="fa fa-caret-down"></i>
                </button>
                <ul class="dropdown-content">
                 <li> 
                  <%= link_to "English", locale: "en" %>
                 </li>
                 <li>
                   <%= link_to "Spanish", locale: "es" %>
                 </li>
                </ul>
              </div>

         </ul>

       
     </nav>        
    </div>

    <div id="preloader"></div>
    

 <div class="inner_body"> 

 


    
    

   
<div id="notice_wrapper">
  <% if !flash[:notice].blank? %>
   <div class="notice">
   <%= flash[:notice] %>
 
   </div>
   <% end %>  
  
</div>
<%= yield %>


    <div class="footer">
         
  
             <%= link_to t('navi.student'), students_url %>
      
             
             <%= link_to t('navi.instructor'), instructors_url %>
        
               <%= link_to t('navi.cohort'), cohorts_url %>
           
             <%= link_to t('navi.courses'), courses_url %>
           

           
              </div>
         </ul>
      
    </div>


</div>
  </body>
</html>
